{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "declaration": true,
    "declarationDir": "./dist/",
    "outDir": "./dist/",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015",
      "es2017"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmit": true,
    "jsx": "preserve",
    "isolatedModules": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
